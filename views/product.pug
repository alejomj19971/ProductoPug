html 
    head 
        title Productos 
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
    body
        div.container 
            h2 Actualizaci贸n o CRUD de Productos 
            p(style={color: error ? 'red' : 'green'}) #{message}
            form(action="/product", method="post")
                div.row
                    div.col 
                        label C贸digo
                        input.form-control(type="text", placeholder="C贸digo", name="prodcod")
                    .col 
                        label Nombre
                        input.form-control(type="text", placeholder="Nombre", name="prodname")
                .row 
                    .col 
                        label Precio
                        input.form-control(type="text", placeholder="Precio", name="prodprice")
                    .col 
                        label Existencia
                        input.form-control(type="text", placeholder="Existencia", name="prodstock")    
                hr
                .row 
                    .col 
                        button.btn.btn-success Guardar 
            hr
            if products.length > 0
                table.table.table-hover 
                    thead 
                        th C贸digo Producto 
                        th Nombre 
                        th Precio 
                        th Valor Iva
                        th Existencia 
                        th(colspan="2") Acciones
                    for prod in products 
                        tr
                            td #{prod.prodcod}
                            td #{prod.prodname}
                            td #{prod.prodprice}
                            td #{prod.prodprice * 19/100}
                            td #{prod.prodstock}
                            td
                                a.btn.btn-dark(href=`/product/edit/${prod._id}`) Editar 
                            td 
                                a.btn.btn-danger(href=`/product/delete/${prod._id}`) Eliminar
            else 
                h4(style={color:'red'}) No hay productos en el inventario




